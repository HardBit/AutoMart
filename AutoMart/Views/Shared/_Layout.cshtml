<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - AutoMart</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark justify-content-around">
        <a class="navbar-brand" href="/">AutoMart</a>

        @RenderSection("TopNavBar", required: false)

        <ul class="nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle btn-info  btn-lg" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Mi cuenta</a>
                <div class="dropdown-menu">
                    <a id="iniciar-sesion" class="dropdown-item" href="#">Iniciar sesión</a>
                    <div class="dropdown-divider" style="display: none;"></div>
                    <a class="dropdown-item" style="display: none;" href="#">Action</a>
                    <div class="dropdown-divider" style="display: none;"></div>
                    <a class="dropdown-item" style="display: none;" href="#">Cerrar sesión</a>
                </div>
            </li>
        </ul>

        <form class="form-inline">
            <a class="btn btn-lg btn-outline-light my-2 my-sm-0" href="/Home/Carrito">Mi carrito <span id="count-badge" class="badge badge-light"></span></a>
        </form>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - AutoMart</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
