
@{
    ViewData["Title"] = "Inicio de sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section TopNavBar {
    <form class="form-inline"></form>
}

    <form id="formulario-iniciar-sesion">
        <div class="form-row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <label for="exampleInputEmail1">Dirección de e-mail</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Introduce tu email">
                @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
            </div>
            <div class="col-md-2">
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">
                <label for="exampleInputPassword1">Contraseña</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Contraseña">
            </div>
            <div class="col-md-2">
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-2">
            </div>
            <div class="col-md-2">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Recordarme</label>
                </div>
            </div>
            <div class="col-md-8">
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-2">
            </div>
            <div class="col-md-2">
                <button type="submit" id="btn-iniciar-sesion" class="btn btn-primary">Iniciar sesión</button>
            </div>
            <div class="col-md-8">
                <button type="button" id="btn-registrarse" class="btn btn-link">Registrarse</button>
            </div>
        </div>
    </form>

@section Scripts {
    <script type="text/javascript">
        'use strict';
        $(document).ready(function () {
            $('#btn-iniciar-sesion').on('click',function () {
            });

            $('#btn-registrarse').on('click', function () {
                window.location.href = '/Home/Register';
            });
        });
    </script>
}

